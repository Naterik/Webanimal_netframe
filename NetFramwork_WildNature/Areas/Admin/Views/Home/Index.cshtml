
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    /* style.css */

    body {
        font-family: 'Lato', sans-serif;
        background: #f7f7f7;
    }

    .ftco-section {
        padding: 7em 0;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
    }

    .login-wrap {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .text-center {
        text-align: center;
    }

    h3 {
        font-weight: 700;
        color: #333;
        margin-bottom: 1em;
    }

    .form-group {
        margin-bottom: 1.5em;
    }

    .label {
        display: block;
        margin-bottom: .5em;
        font-weight: 400;
        color: #666;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

        input[type="text"]::placeholder,
        input[type="password"]::placeholder {
            color: #bbb;
        }

    .form-control-feedback {
        position: absolute;
        right: 15px;
        top: 15px;
        color: #aaa;
    }

    .btn {
        display: inline-block;
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 5px;
        background: #5a67d8;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .btn:hover {
            background: #434190;
        }

    .text-danger {
        color: #e3342f;
        margin-top: 10px;
    }

    p.text-center {
        margin-top: 20px;
        color: #666;
    }

        p.text-center a {
            color: #5a67d8;
            text-decoration: none;
        }

            p.text-center a:hover {
                text-decoration: underline;
            }
</style>
<h2>Index</h2>

