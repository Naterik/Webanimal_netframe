@model NetFramwork_WildNature.Db.Account

<!DOCTYPE html>
<style>
    .wrap-login100 {
        padding: 90px 130px 33px 100px !important;
    }

    .p-t-136 {
        padding-top: 50px !important;
    }
</style>
<html lang="en">

<head>
    <title>Login WildNature</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" type="image/png" href="~/Asset/Admin/controller/Login/images/icons/favicon.ico" />

    <link rel="stylesheet" type="text/css" href="~/Asset/Admin/controller/Login/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Asset/Admin/controller/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Asset/Admin/controller/Login/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Asset/Admin/controller/Login/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Asset/Admin/controller/Login/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Asset/Admin/controller/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Asset/Admin/controller/Login/css/main.css">

    <meta name="robots" content="noindex, follow">
</head>

<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" method="post">
                    @Html.AntiForgeryToken()
                    <span class="login100-form-title">
                        Đăng ký
                    </span>
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["error"]
                        </div>
                    }
                    <div class="wrap-input100 validate-input">
                        @Html.TextBoxFor(m => m.Name, new { @class = "input100", placeholder = "Tên" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input100", placeholder = "Email" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input">
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", placeholder = "Mật khẩu" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="password" name="passConfirm" placeholder="Nhập lại mật khẩu" />
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">
                            Đăng ký
                        </button>
                    </div>
                    <div class="text-center p-t-136">
                        <a class="txt2" href="/Admin/Login/Login">
                            <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                            Quay lại đăng nhập
                        </a>
                    </div>
                </form>
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Asset/Admin/controller/Login/images/img-01.png" alt="IMG">
                </div>
            </div>
        </div>
    </div>

    <script src="~/Asset/Admin/controller/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Asset/Admin/controller/Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Asset/Admin/controller/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Asset/Admin/controller/Login/vendor/select2/select2.min.js"></script>
    <script src="~/Asset/Admin/controller/Login/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-23581568-13');
    </script>
</body>
</html>

