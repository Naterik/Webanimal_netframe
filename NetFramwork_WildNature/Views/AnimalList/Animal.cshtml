                <div class="image-container">
                    @if (ViewBag.SelectedImage != null)
                    {
                        <img src="@Url.Content(ViewBag.SelectedImage.Link)" class="img-animal img-with-padding img_detail" alt="Selected Animal Image" />
                    }
                </div>
                <!-- Name and Info -->
                <div class="caption-adoption col-lg-3 col-md-12">
                    <h3 class="animal-name">@Model.Animal.Name</h3>
                    @if (Model.Animal.Animaldetails.Any())
                    {
                        var animalDetail = Model.Animal.Animaldetails.First();
