<!-- Page Header Start -->
<div class="container-fluid header-bg py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <h1 class="display-4 text-white mb-3 animated slideInDown">Động vật</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a class="text-white" href="#">Trang chủ</a>
                </li>
                <li class="breadcrumb-item">
                    <a class="text-white" href="#">Trang</a>
                </li>
                <li class="breadcrumb-item">
                    <a class="text-white" href="#">Động vật</a>
                </li>
                <li class="breadcrumb-item text-primary active" aria-current="page">
                    @Model.Animal.Name
                </li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<div class="page container">
    <div class="row">
        <div class="col-lg-9 page-with-sidebar flex-sm-fill">
            <div class="adopt-card d-flex col-lg-15">
                <!-- Selected Image -->
                <div class="image-container">
                    <img src="@Url.Content(selectedImage.Link)" class="img-animal img-with-padding img_detail" alt="Selected Animal Image" />
                </div>
                <!-- Name và thông tin -->
                <div class="caption-adoption col-lg-3 col-md-12">
                    <h3 class="animal-name">@Model.Animal.Name</h3>
                    <ul class="adopt-card-info list-unstyled">
                        <li><i class="fas fa-weight-hanging"></i> <strong>Cân nặng:</strong> @Model.Weight kg</li>
                        <li><i class="fas fa-ruler-vertical"></i> <strong>Chiều cao:</strong> @Model.Height cm</li>
                        <li><i class="fas fa-map-marker-alt"></i> <strong>Nguồn gốc:</strong> @Model.Origin</li>
                        <li><i class="fas fa-dog"></i> <strong>Thuộc họ:</strong> @Model.Specie.Name</li>
                        <li><i class="fas fa-palette"></i> <strong>Màu lông:</strong> @Model.Color.Name</li>
                    </ul>
                    <ul class="list-unstyled mt-3">
                        <li><i class="fas fa-globe"></i> <strong>Khu vực sinh sống:</strong> @Model.Animal.Area.Name</li>
                    </ul>
                </div>
            </div>
            <!-- Thông tin về động vật -->
            <div class="col-lg-12" style="margin-top: 40px">
                <h3>About @Model.Animal.Name</h3>
                <p>@Model.Animal.Decription</p>
                <p class="font-weight-bold">
                    If you have any doubts or need more information, please <a href="#">contact us</a>
                </p>

            </div>
            <!-- Thư viện ảnh của động vật -->
            <div class="col-lg-12">
                <h4 class="mt-5">Các hình ảnh của @Model.Animal.Name</h4>
                <hr class="small-divider left">
                <!-- Carousel hiển thị ảnh -->
                <div class="carousel-3items owl-carousel p-2 magnific-popup">
                    @foreach (var image in Model.Images.Where(i => i.ID != selectedImage.ID))
                    {
                        <a href="@Url.Action("AnimalDetail", "AnimalList", new { id = image.ID })" title="Image of @Model.Animal.Name">
                            <img alt="Animal Image" src="@Url.Content(image.Link)" class="hover-opacity rounded img-fluid">
                        </a>
                    }
                </div>
            </div>
