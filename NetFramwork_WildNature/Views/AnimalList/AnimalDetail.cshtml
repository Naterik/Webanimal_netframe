@model NetFramwork_WildNature.Db.AnimalDetail

@{
    ViewBag.Title = "AnimalDetail";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var selectedImage = ViewBag.SelectedImage as NetFramwork_WildNature.Db.Image;
}

<head>
    <link href="~/Asset/User/css/AnimalDetail/AnimalDetail.css" rel="stylesheet" />
