@model NetFramwork_WildNature.Models.Gmail

@{
    ViewBag.Title = "SendMessage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid header-bg py-5 mb-5 wow fadeIn"
     data-wow-delay="0.1s">
    <div class="container py-5">
        <h1 class="display-4 text-white mb-3 animated slideInDown">
            Liên hệ
        </h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a class="text-white" href="#">Trang chủ</a>
                </li>
                <li class="breadcrumb-item">
                    <a class="text-white" href="#">Trang</a>
                </li>
                <li class="breadcrumb-item text-primary active" aria-current="page">
                    Liên hệ
                </li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Bắt đầu Liên hệ -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4 mb-5">
            <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                <div class="h-100 bg-light d-flex align-items-center p-5">
                    <div class="btn-lg-square bg-white flex-shrink-0">
                        <i class="fa fa-map-marker-alt text-primary"></i>
                    </div>
                    <div class="ms-4">
                        <p class="mb-2">
                            <span class="text-primary me-2">#</span>Địa chỉ
                        </p>
                        <h5 class="mb-0">Huyện Tân Phú, tỉnh Đồng Nai, Việt Nam</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.3s">
                <div class="h-100 bg-light d-flex align-items-center p-5">
                    <div class="btn-lg-square bg-white flex-shrink-0">
                        <i class="fa fa-phone-alt text-primary"></i>
                    </div>
                    <div class="ms-4">
                        <p class="mb-2">
                            <span class="text-primary me-2">#</span>Gọi Ngay
                        </p>
                        <h5 class="mb-0">0379627003</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.5s">
                <div class="h-100 bg-light d-flex align-items-center p-5">
                    <div class="btn-lg-square bg-white flex-shrink-0">
                        <i class="fa fa-envelope-open text-primary"></i>
                    </div>
                    <div class="ms-4">
                        <p class="mb-2">
                            <span class="text-primary me-2">#</span>Email Ngay
                        </p>
                        <h5 class="mb-0">lukhuong190703@gmail.com</h5>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5">
                    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                        <p><span class="text-primary me-2">#</span>Liên hệ</p>
                        <h1 class="display-5 mb-4">Có Bất Kỳ Câu Hỏi Nào? Hãy Liên Hệ Với Chúng Tôi!</h1>
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["SuccessMessage"]
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        @using (Html.BeginForm("SendMessage", "Contact", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        @Html.TextBoxFor(m => m.From, new { @class = "form-control bg-light border-0", placeholder = "Họ và Tên của Bạn" })
                                        @Html.LabelFor(m => m.From)
                                        @Html.ValidationMessageFor(m => m.From, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        @Html.TextBoxFor(m => m.To, new { @class = "form-control bg-light border-0", placeholder = "Email của Bạn" })
                                        @Html.LabelFor(m => m.To)
                                        @Html.ValidationMessageFor(m => m.To, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        @Html.TextBoxFor(m => m.Sub, new { @class = "form-control bg-light border-0", placeholder = "Tiêu đề" })
                                        @Html.LabelFor(m => m.Sub)
                                        @Html.ValidationMessageFor(m => m.Sub, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        @Html.TextAreaFor(m => m.Body, new { @class = "form-control bg-light border-0", placeholder = "Để lại tin nhắn của bạn ở đây", style = "height: 100px" })
                                        @Html.LabelFor(m => m.Body)
                                        @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3" type="submit">Gửi Tin Nhắn</button>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                        <div class="h-100" style="min-height: 400px">
                            <iframe class="rounded w-100 h-100" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d250329.435537736!2d107.19522620407369!3d11.378653651291355!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317480969be96391%3A0x584ad64d2a01d9a5!2zVsaw4budbiBRdeG7kWMgR2lhIEPDoXQgVGnDqm4!5e0!3m2!1svi!2s!4v1716828416798!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
