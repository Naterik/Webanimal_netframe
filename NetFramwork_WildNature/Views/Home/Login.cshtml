@model NetFramwork_WildNature.Db.Account
<!doctype html>
<style>
    /* style.css */

    body {
        font-family: 'Lato', sans-serif;
        background: #f7f7f7;
    }

    .ftco-section {
        padding: 7em 0;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
    }

    .login-wrap {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .text-center {
        text-align: center;
    }

    h3 {
        font-weight: 700;
        color: #333;
        margin-bottom: 1em;
    }

    .form-group {
        margin-bottom: 1.5em;
    }

    .label {
        display: block;
        margin-bottom: .5em;
        font-weight: 400;
        color: #666;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

        input[type="text"]::placeholder,
        input[type="password"]::placeholder {
            color: #bbb;
        }

    .form-control-feedback {
        position: absolute;
        right: 15px;
        top: 15px;
        color: #aaa;
    }

    .btn {
        display: inline-block;
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 5px;
        background: #5a67d8;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .btn:hover {
            background: #434190;
        }

    .text-danger {
        color: #e3342f;
        margin-top: 10px;
    }

    p.text-center {
        margin-top: 20px;
        color: #666;
    }

        p.text-center a {
            color: #5a67d8;
            text-decoration: none;
        }

            p.text-center a:hover {
                text-decoration: underline;
            }
</style>
<html lang="en">
<head>
    <title>Login WildNature</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Asset/Admin/controller/Loginadmin/css/style.css">

</head>

<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <h3 class="text-center mb-0">Welcome</h3>

                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                            <div class="form-group mb-3">
                                <label class="label" for="name">Email</label>
                                <div class="form-group has-feedback">
                                    <input type="text" placeholder="Username" name="email" />
                                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="password">Mật khẩu</label>
                                <div class="form-group has-feedback">
                                    <input type="password" placeholder="Password" name="pass" />
                                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                </div>
                                <div>
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Đăng nhập</button>
                            </div>
                            <p class="text-center">Muốn trở thành nhà tình nguyện? <a href="/Admin/Login/Signup">Đăng Ký</a></p>

                        }


                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="@Url.Content("~/Asset/Admin/controller/Loginadmin/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Asset/Admin/controller/Loginadmin/js/popper.js")"></script>
    <script src="@Url.Content("~/Asset/Admin/controller/Loginadmin/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Asset/Admin/controller/Loginadmin/js/main.js")"></script>

</body>
</html>


