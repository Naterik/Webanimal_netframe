    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Lấy URL hiện tại
            var path = window.location.pathname;

            // Các phần tử nav-link
            var navLinks = document.querySelectorAll('.nav-item.nav-link');

            // Duyệt qua các phần tử nav-link và kiểm tra URL
            navLinks.forEach(function (link) {
                // Kiểm tra nếu href của link trùng với URL hiện tại
                if (link.getAttribute('href') === path) {
                    // Thêm lớp active cho link hiện tại
                    link.classList.add('active');
                } else {
                    // Loại bỏ lớp active khỏi các link không phải hiện tại
                    link.classList.remove('active');
                }
            });
        });

    </script>

